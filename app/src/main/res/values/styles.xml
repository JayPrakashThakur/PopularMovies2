<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

    </style>

    <!-- Detail Theme -->
    <style name="DetailTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.PopularMovies2.NoTitle</item>
    </style>

    <!-- SettingsActivity -->
    <style name="SettingsTheme" parent="AppTheme">

    </style>

    <!-- main activity action bar styles -->
    <style name="ActionBar.Solid.PopularMovies2.NoTitle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">useLogo|showHome</item>
        <item name="logo">@drawable/movie_icon</item>
    </style>

    <!-- Style for Detail listview -->
    <style name="DetailListStyle">
        <!-- Here it's a stub.  In screens of sufficient width, this style includes modifications
        for two-pane layout -->
    </style>

</resources>
